 #!/bin/bash
pkill -f /dev/video || mpv --geometry=-0-0 --autofit=25% --profile=low-latency --untimed --no-correct-pts --opengl-glfinish=yes --opengl-swapinterval=0 --no-osc --no-input-default-bindings --input-conf=/dev/null --title='mpvfloat' --demuxer-lavf-format=video4linux2 --vf='hflip' --demuxer-lavf-o-set=input_format=mjpeg av://v4l2:/dev/video0
